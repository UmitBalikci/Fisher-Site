@model ApartmentDTO

<div class="row">
    <div class="col-12 col-sm-8 col-md-6">
        <form method="post" class="form-check">
            <div class="mb-3">
                <label class="form-label" asp-for ="BlockId">Block Name</label>
                <select class="form-control" asp-items="@ViewBag.BLocks" asp-for="BlockId"></select>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="ApartmentStateId">Apartment State</label>
                <select class="form-control" asp-for="ApartmentStateId" asp-items="ViewBag.ApartmentStates"></select>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="ApartmentTypeId">Apartment Type</label>
                <select class="form-control" asp-for="ApartmentTypeId" asp-items="ViewBag.ApartmentTypes"></select>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="ApartmentFloor">Floor</label>
                <select class="form-control" asp-for="ApartmentFloor" asp-items="@Html.GetEnumSelectList<Floor>()"></select>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="PersonId">Person Name</label>
                <select class="form-control" asp-for="PersonId" asp-items="ViewBag.Persons"></select>
            </div>
            <button class="btn btn-outline-success" type="submit">Save</button>
        </form>
    </div>
</div>