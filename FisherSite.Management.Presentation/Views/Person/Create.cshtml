@model PersonDTO

<div class="row">
    <div class="col-12 col-sm-8 col-md-6">
        <form method="post" class="form-check">
            <div class="mb-3">
                <label class="form-label" asp-for ="Name">Name</label>
                <input asp-for="Name" class="form-control" type="text"/>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="IdentityNumber">Identity Number</label>
                <input asp-for="IdentityNumber" class="form-control" type="text"/>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="Email">Email</label>
                <input asp-for="Email" class="form-control" type="text"/>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" type="text"/>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for ="VehicleInfo">Vehicle Info</label>
                <input asp-for="VehicleInfo" class="form-control" type="text"/>
            </div>
            <button class="btn btn-outline-success" type="submit">Save</button>
        </form>
    </div>
</div>